node {
   def mvnHome
   def javaHome
   stage('Prepare') {
      git url: 'https://github.com/vijayfromnamakkal/devops.git', branch: 'develop'
      mvnHome = tool 'maven'
      javaHome = tool 'JAVA_HOME'
   }
   stage('Build') {
      if (isUnix()) {
         sh "echo '11111111111111111111111'"
         sh "export JAVA_HOME=${javaHome}" 
          sh "echo '22222222222222222222'"
         sh "export PATH=$JAVA_HOME/bin:$PATH"
          sh "echo '33333333333333333'"
         sh "echo $PATH"
          sh "echo '4444444444444444444444'"
         sh "echo JAVA PATH SETTING"
          sh "echo '55555555555555555552'"
         sh "'${mvnHome}/bin/mvn' -Dmaven.test.failure.ignore clean package"
      } else {
         bat(/"${mvnHome}\bin\mvn" -Dmaven.test.failure.ignore clean package/)
      }
   }
   stage('Unit Test') {
      junit '**/target/surefire-reports/TEST-*.xml'
      archive 'target/*.jar'
   }
   stage('Integration Test') {
     if (isUnix()) {
        sh "'${mvnHome}/bin/mvn' -Dmaven.test.failure.ignore clean verify"
     } else {
        bat(/"${mvnHome}\bin\mvn" -Dmaven.test.failure.ignore clean verify/)
     }
   }
   stage('Sonar') {
      if (isUnix()) {
         sh "'${mvnHome}/bin/mvn' sonar:sonar  -Dsonar.host.url=http://192.168.0.111:9000 -Dsonar.login=0ca049740e2ae3d445e0c0add0b281286c6017cc"
      } else {
         bat(/"${mvnHome}\bin\mvn" sonar:sonar/)
      }
   }
   stage('Deploy') {
       sh 'curl -u jenkins:jenkins -T target/**.war "http://192.168.0.111:8080/manager/text/deploy?path=/devops&update=true"'
   }
   stage("Smoke Test"){
       sh "curl --retry-delay 10 --retry 5 http://192.168.0.111:8080/devops"
   }
}
